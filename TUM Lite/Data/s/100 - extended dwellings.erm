!!el:; set monster type
  !!FU(dex_SetDwellingSlotByTownId):Px1/x2/0/x3/x4/-1;
  !!FU(dex_SetDwellingSlotByTownId):Px1/x2/1/x3/x4/-1;
!!en;

!!if&y5=0:; get population amount
